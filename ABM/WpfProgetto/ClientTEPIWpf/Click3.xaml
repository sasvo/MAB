<Window x:Class="ClientTEPIWpf.Click3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientTEPIWpf"
        mc:Ignorable="d"
        Title="Click3"
        Height="450"
        Width="800"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#FF005FD6">
    <Viewbox Stretch="Uniform">
        <Grid Background="#FF005FD6" Width="800" Height="450">
            <DatePicker x:Name="DPFirst" HorizontalAlignment="Left" Height="28" Margin="29,160,0,0" VerticalAlignment="Top" Width="160" RenderTransformOrigin="0.504,0.573" FontFamily="Times New Roman" FontWeight="Bold"/>
            <DatePicker x:Name="DPFinally" HorizontalAlignment="Left" Height="28" Margin="226,160,0,0" VerticalAlignment="Top" Width="160" FontFamily="Times New Roman" FontWeight="Bold"/>
            <TextBox x:Name="TBSettore" HorizontalAlignment="Left" Height="28" Margin="29,213,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="160" Text="Settore" FontFamily="Times New Roman" FontWeight="Bold" TextAlignment="Center" GotFocus="txtSettore_GotFocus"
             LostFocus="txtSettore_LostFocus"/>
            <TextBox x:Name="TBArgomento" HorizontalAlignment="Left" Height="29" Margin="226,212,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="160" Text="Argomento" FontFamily="Times New Roman" TextAlignment="Center" FontWeight="Bold" GotFocus="txtArgomento_GotFocus"
             LostFocus="txtArgomento_LostFocus"/>
            <TextBox x:Name="TBArea" HorizontalAlignment="Left" Height="29" Margin="423,213,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="192" Text="Area" FontFamily="Times New Roman" FontWeight="Bold" TextAlignment="Center" GotFocus="txtArea_GotFocus"
             LostFocus="txtArea_LostFocus"/>
            <Button Content="Invia" HorizontalAlignment="Left" Height="28" Margin="226,272,0,0" VerticalAlignment="Top" Width="160" Click="Button_Click" FontFamily="Times New Roman" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Home" HorizontalAlignment="Left" Height="28" Margin="29,272,0,0" VerticalAlignment="Top" Width="160" Click="Button_Click_1" FontFamily="Times New Roman" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock HorizontalAlignment="Center" Height="113" TextWrapping="Wrap"  VerticalAlignment="Top" Width="348"  Text="ABM" FontFamily="Times New Roman" FontWeight="Bold" TextDecorations="Underline" TextAlignment="Center" Foreground="White" FontSize="90">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="2" Opacity="1"/>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>
    </Viewbox>
</Window>
