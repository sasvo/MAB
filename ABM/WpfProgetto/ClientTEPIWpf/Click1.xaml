<Window x:Class="ClientTEPIWpf.Click1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Click1" Height="350" Width="496" Background="#FF004CBE" WindowState="Maximized"
WindowStyle="None">
    <Viewbox Stretch="Uniform">
        <Grid Background="#FF004CBE" Width="496" Height="350">
            <DatePicker x:Name="DataDP" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="381,92,0,0" VerticalAlignment="Top" Width="89" Opacity="0.8" FontFamily="Times New Roman" FontWeight="Bold"/>
            <TextBox x:Name="contenutoDP" HorizontalAlignment="Left" Height="145" TextWrapping="Wrap" Text="Inserire il corpo della notizia" VerticalAlignment="Top" Width="450" Margin="20,125,0,0" Grid.Column="1" Grid.ColumnSpan="2" Opacity="0.8" GotFocus="txtContenutoDP_GotFocus"
             LostFocus="txtContenutoDp_LostFocus" FontFamily="Times New Roman" TextAlignment="Justify" FontWeight="Bold" />
            <TextBox x:Name="SettoreTB" Text="Settore" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="23" Margin="20,92,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="85" Opacity="0.8" GotFocus="txtSettore_GotFocus"
             LostFocus="txtSettore_LostFocus" FontFamily="Times New Roman" TextAlignment="Center" FontWeight="Bold" />
            <TextBox x:Name="ArgomentoTB" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="23" Margin="111,92,0,0" TextWrapping="Wrap" Text="Argomento" VerticalAlignment="Top" Width="85" Opacity="0.8" GotFocus="txtArgomento_GotFocus"
             LostFocus="txtArgomento_LostFocus" FontFamily="Times New Roman" TextAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="AreaTB" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="23" Margin="201,92,0,0" TextWrapping="Wrap" Text="Area" VerticalAlignment="Top" Width="85" Opacity="0.8" GotFocus="txtArea_GotFocus"
             LostFocus="txtArea_LostFocus" FontFamily="Times New Roman" TextAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="TitoloTB" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="23" Margin="291,92,0,0" TextWrapping="Wrap" Text="Titolo" VerticalAlignment="Top" Width="85" Opacity="0.8" GotFocus="txtTitolo_GotFocus"
             LostFocus="txtTitolo_LostFocus" FontFamily="Times New Roman" TextAlignment="Center" FontWeight="Bold"/>
            <Button Grid.ColumnSpan="3" Content="Indietro" HorizontalAlignment="Left" Margin="84,289,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" Opacity="0.8" FontFamily="Times New Roman" Height="20" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="BtAdd" Content="Invia" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="20" Margin="287,289,0,0" VerticalAlignment="Top" Width="79" Click="BtAdd_Click" Opacity="0.79" FontFamily="Times New Roman" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock Margin="36,-13,45,0"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top"
                       Text="ABM"
                       FontFamily="Times New Roman"
                       FontWeight="Bold"
                       TextDecorations="Underline"
                       TextAlignment="Center"
                       Foreground="White"
                       FontSize="87">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="2" Opacity="1"/>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>
    </Viewbox>
</Window>